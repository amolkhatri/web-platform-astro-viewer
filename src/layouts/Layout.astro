---
import { ClientRouter } from "astro:transitions";
import DeviceBanner from "../components/DeviceBanner.astro";
import { isBot } from "../utils/isBot";
import Analytics from '@vercel/analytics/astro'


const userAgent = Astro.request.headers.get("user-agent") || "";
const shouldLoadHtmx = !isBot(userAgent);
---

<!doctype html>
<html lang="en" style="background: #121212; color: #e2e2e2;">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		
		<title>Viewer</title>
		<Analytics />
		<!-- <ClientRouter /> -->
		{shouldLoadHtmx && <script is:inline src="/htmx.min.js" />}
	</head>
	<body style="background: #121212; color: #e2e2e2; margin: 0; min-height: 100vh;">
		<!-- <DeviceBanner /> -->
		<slot />
		<div id="eprice-overlay-root" aria-live="polite" aria-busy="false"></div>
		<script is:inline data-astro-rerun>
			(function () {
				const rootId = "eprice-overlay-root";

				function closeOverlay() {
					const root = document.getElementById(rootId);
					if (root) {
						root.innerHTML = "";
						root.removeAttribute("data-overlay-open");
					}
				}

				// Set up overlay close handlers (only once per document lifecycle)
				if (!window.__overlayHandlersInitialized) {
					window.__overlayHandlersInitialized = true;

					document.addEventListener("click", (event) => {
						const target = event.target;
						if (!(target instanceof HTMLElement)) {
							return;
						}

						const dismissTrigger = target.closest(
							"[data-overlay-dismiss='eprice']",
						);
						if (dismissTrigger) {
							event.preventDefault();
							closeOverlay();
						}
					});

					document.addEventListener("keydown", (event) => {
						if (event.key === "Escape") {
							closeOverlay();
						}
					});

					// HTMX event handlers (set once)
					document.addEventListener("htmx:afterSwap", (event) => {
						const target = event.target;
						
						// Handle overlay content being swapped into the overlay root
						if (
							target instanceof HTMLElement &&
							target.id === rootId
						) {
							const focusTarget = target.querySelector(
								"[data-overlay-panel]",
							);
							if (focusTarget instanceof HTMLElement) {
								requestAnimationFrame(() => focusTarget.focus());
							}
							target.setAttribute("data-overlay-open", "true");
						}
						
						// Process all new content that was swapped in
						if (target instanceof HTMLElement && window.htmx) {
							setTimeout(() => {
								window.htmx.process(target);
							}, 0);
						}
					});
				}

				// This runs on every page load (including soft navigations due to data-astro-rerun)
				function processHtmxElements() {
					if (window.htmx) {
						// Process entire document body to activate hx- attributes
						window.htmx.process(document.body);
					} else {
						// HTMX not loaded yet, wait and retry
						let attempts = 0;
						const checkInterval = setInterval(() => {
							attempts++;
							if (window.htmx) {
								clearInterval(checkInterval);
								window.htmx.process(document.body);
							} else if (attempts >= 50) {
								clearInterval(checkInterval);
								console.warn("HTMX not loaded");
							}
						}, 100);
					}
				}

				// Process HTMX elements now
				processHtmxElements();

				// Also set up a MutationObserver for server:defer content
				if (!window.__htmxObserverInitialized && window.htmx) {
					window.__htmxObserverInitialized = true;
					const observer = new MutationObserver((mutations) => {
						mutations.forEach((mutation) => {
							mutation.addedNodes.forEach((node) => {
								if (node instanceof HTMLElement) {
									const hasHtmxAttrs = node.hasAttribute('hx-get') ||
										node.hasAttribute('hx-post') ||
										node.querySelector('[hx-get], [hx-post]');
									
									if (hasHtmxAttrs && window.htmx) {
										setTimeout(() => {
											window.htmx.process(node);
										}, 0);
									}
								}
							});
						});
					});
					observer.observe(document.body, {
						childList: true,
						subtree: true
					});
				}
			})();
		</script>
	</body>
</html>

<style is:global>
	*,
	*::before,
	*::after {
		box-sizing: border-box;
	}

	:root {
		/* Material 3 reference palette (dark) */
		--md-ref-palette-primary40: #94b2ff;
		--md-ref-palette-primary80: #d6e2ff;
		--md-ref-palette-secondary40: #b9c6da;
		--md-ref-palette-secondary80: #dde2f3;
		--md-ref-palette-tertiary40: #f3b2d8;
		--md-ref-palette-tertiary80: #ffd7f0;
		--md-ref-palette-neutral10: #121212;
		--md-ref-palette-neutral20: #1c1c1c;
		--md-ref-palette-neutral30: #262626;
		--md-ref-palette-neutral90: #e2e2e2;
		--md-ref-palette-neutral-variant30: #3c3f47;
		--md-ref-palette-neutral-variant60: #6b6f78;
		--md-ref-palette-error40: #f2b8b5;
		--md-ref-palette-error80: #f9dedc;

		/* Material system colors */
		--md-sys-color-background: var(--md-ref-palette-neutral10);
		--md-sys-color-on-background: var(--md-ref-palette-neutral90);
		--md-sys-color-surface: #121212;
		--md-sys-color-surface-dim: #0d0d0d;
		--md-sys-color-surface-bright: #2b2b2b;
		--md-sys-color-surface-container-lowest: #0a0a0a;
		--md-sys-color-surface-container-low: #171717;
		--md-sys-color-surface-container: #1c1c1c;
		--md-sys-color-surface-container-high: #222222;
		--md-sys-color-surface-container-highest: #2f2f2f;
		--md-sys-color-on-surface: var(--md-ref-palette-neutral90);
		--md-sys-color-on-surface-variant: #c5c6cf;
		--md-sys-color-outline: rgba(255, 255, 255, 0.12);
		--md-sys-color-outline-variant: rgba(255, 255, 255, 0.2);
		--md-sys-color-primary: var(--md-ref-palette-primary40);
		--md-sys-color-on-primary: #0a2d61;
		--md-sys-color-primary-container: #1d3456;
		--md-sys-color-on-primary-container: var(--md-ref-palette-primary80);
		--md-sys-color-secondary: #adc0d8;
		--md-sys-color-on-secondary: #18222f;
		--md-sys-color-secondary-container: #253041;
		--md-sys-color-on-secondary-container: #e0e6f4;
		--md-sys-color-tertiary: #f3b2d8;
		--md-sys-color-on-tertiary: #3d0e2b;
		--md-sys-color-tertiary-container: #4e1f3d;
		--md-sys-color-on-tertiary-container: #ffd9ec;
		--md-sys-color-error: #f2b8b5;
		--md-sys-color-on-error: #601410;
		--md-sys-color-error-container: #8c1d18;
		--md-sys-color-on-error-container: #f9dedc;

		/* Elevation and radii */
		--md-elevation-1: 0px 1px 3px rgba(0, 0, 0, 0.35),
			0px 1px 2px rgba(0, 0, 0, 0.24);
		--md-elevation-2: 0px 4px 8px rgba(0, 0, 0, 0.45),
			0px 2px 3px rgba(0, 0, 0, 0.35);
		--md-elevation-3: 0px 8px 16px rgba(0, 0, 0, 0.55),
			0px 6px 8px rgba(0, 0, 0, 0.45);
		--md-radius-sm: 8px;
		--md-radius-md: 16px;
		--md-radius-lg: 24px;

		/* Legacy aliases for existing components */
		--page-bg: var(--md-sys-color-background);
		--surface-bg: var(--md-sys-color-surface);
		--surface-elevated: var(--md-sys-color-surface-container-high);
		--card-bg: var(--md-sys-color-surface-container);
		--card-bg-muted: var(--md-sys-color-surface-container-low);
		--card-bg-contrast: var(--md-sys-color-surface-container-highest);
		--border-color: var(--md-sys-color-outline);
		--border-color-strong: var(--md-sys-color-outline-variant);
		--divider-color: var(--md-sys-color-outline);
		--text-color: var(--md-sys-color-on-surface);
		--heading-color: var(--md-sys-color-on-surface);
		--text-muted: color-mix(in srgb, var(--md-sys-color-on-surface) 65%, transparent);
		--text-subtle: color-mix(in srgb, var(--md-sys-color-on-surface) 45%, transparent);
		--newsletter-bg: var(--md-sys-color-surface-container-high);
		--newsletter-text: var(--md-sys-color-on-surface);
		--primary-color: var(--md-sys-color-primary);
		--primary-color-strong: var(--md-sys-color-primary-container);
		--primary-color-soft: color-mix(
			in srgb,
			var(--md-sys-color-primary) 15%,
			transparent
		);
		--accent-color: var(--md-sys-color-tertiary);
		--accent-color-soft: color-mix(
			in srgb,
			var(--md-sys-color-tertiary) 15%,
			transparent
		);
		--danger-color: var(--md-sys-color-error);
		--danger-color-dark: var(--md-sys-color-error-container);
		--warning-color: #f7c76b;
		--success-color: #6dd58c;
		--hero-gradient: radial-gradient(circle at top, #1e2e54, #0e111a);
		--shadow-soft: var(--md-elevation-2);
		--radius-sm: var(--md-radius-sm);
		--radius-md: var(--md-radius-md);
		--radius-lg: var(--md-radius-lg);
	}

	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
		font-family: "Inter", "Roboto", system-ui, sans-serif;
		background: var(--md-sys-color-background);
		color: var(--md-sys-color-on-background);
	}
	body {
		min-height: 100vh;
	}

	/* Prevent white flash during Astro transitions */
	html[data-astro-transition-scope] {
		background: var(--md-sys-color-background) !important;
	}
	
	/* Ensure no white background during page transitions */
	astro-island,
	[data-astro-transition-scope] {
		background: transparent;
	}
	main {
		background: var(--surface-bg);
		min-height: 100vh;
		color: var(--md-sys-color-on-surface);
	}

	h1,
	h2,
	h3,
	h4,
	h5,
	h6 {
		color: var(--heading-color);
	}
	p {
		color: var(--text-color);
	}

	#eprice-overlay-root {
		position: relative;
		z-index: 1000;
	}

	.eprice-overlay {
		position: fixed;
		inset: 0;
		z-index: 1100;
		display: flex;
		align-items: center;
		justify-content: center;
		padding: 1.5rem;
		animation: eprice-fade 180ms ease;
	}

	.eprice-overlay__backdrop {
		position: absolute;
		inset: 0;
		background: color-mix(in srgb, #050507 80%, transparent);
		border: none;
		opacity: 0.92;
	}

	.eprice-overlay__panel {
		position: relative;
		width: min(560px, 100%);
		border-radius: var(--radius-lg);
		background: var(--surface-elevated);
		border: 1px solid var(--border-color);
		box-shadow: var(--shadow-soft);
		padding: 2.5rem 2.25rem 2rem;
		color: var(--text-color);
		animation: eprice-slide 220ms ease;
		outline: none;
	}

	.eprice-overlay__panel--success {
		text-align: center;
	}

	.eprice-overlay__close {
		position: absolute;
		top: 1rem;
		right: 1rem;
		width: 2.25rem;
		height: 2.25rem;
		border-radius: 999px;
		border: 1px solid var(--border-color);
		background: transparent;
		color: var(--heading-color);
		font-size: 1.15rem;
		cursor: pointer;
		display: grid;
		place-items: center;
		transition: background 150ms ease, border-color 150ms ease;
	}

	.eprice-overlay__close:hover,
	.eprice-overlay__close:focus-visible {
		background: color-mix(in srgb, var(--primary-color) 10%, transparent);
		border-color: var(--primary-color);
		color: var(--primary-color);
	}

	.eprice-overlay__eyebrow {
		font-size: 0.85rem;
		text-transform: uppercase;
		letter-spacing: 0.2em;
		color: var(--text-subtle);
		margin-bottom: 0.5rem;
	}

	.eprice-overlay__title {
		margin: 0;
		font-size: 1.65rem;
		line-height: 1.3;
		color: var(--heading-color);
	}

	.eprice-overlay__subtitle {
		color: var(--text-muted);
		margin: 0.75rem 0 1rem;
	}

	.eprice-overlay__summary {
		display: grid;
		gap: 1rem;
		margin-bottom: 1rem;
	}

	.eprice-overlay__chips {
		display: flex;
		flex-wrap: wrap;
		gap: 0.5rem;
		padding: 0;
		margin: 0 0 1rem;
		list-style: none;
	}

	.eprice-overlay__chip {
		padding: 0.35rem 0.65rem;
		border-radius: var(--radius-sm);
		border: 1px solid var(--border-color);
		background: var(--surface-container-high);
		font-size: 0.8rem;
		color: var(--text-subtle);
	}

	.eprice-overlay__summary-label {
		font-size: 0.75rem;
		text-transform: uppercase;
		letter-spacing: 0.08em;
		color: var(--text-subtle);
	}

	.eprice-overlay__summary-value {
		font-size: 1rem;
		font-weight: 600;
		color: var(--heading-color);
		margin: 0.25rem 0;
	}

	.eprice-overlay__meta {
		color: var(--text-subtle);
		font-size: 0.85rem;
		margin: 0;
	}

	.eprice-overlay__price-card {
		background: var(--card-bg-muted);
		border-radius: var(--radius-md);
		border: 1px solid var(--border-color);
		padding: 1rem 1.25rem;
		display: flex;
		flex-direction: column;
		gap: 0.5rem;
	}

	.eprice-overlay__price-row {
		display: flex;
		justify-content: space-between;
		align-items: baseline;
	}

	.eprice-overlay__price {
		font-size: 1.2rem;
		font-weight: 700;
		color: var(--heading-color);
	}

	.eprice-overlay__price--muted {
		color: var(--text-muted);
		text-decoration: line-through;
		font-weight: 500;
	}

	.eprice-overlay__form {
		display: grid;
		gap: 1rem;
		margin-top: 1.25rem;
	}

	.eprice-overlay__field {
		display: flex;
		flex-direction: column;
		gap: 0.35rem;
		font-size: 0.9rem;
		color: var(--text-muted);
	}

	.eprice-overlay__field input,
	.eprice-overlay__field select {
		padding: 0.65rem 0.75rem;
		border-radius: var(--radius-sm);
		border: 1px solid var(--border-color);
		background: var(--card-bg);
		color: var(--text-color);
		font-size: 0.95rem;
	}

	.eprice-overlay__field input:focus-visible,
	.eprice-overlay__field select:focus-visible {
		outline: 2px solid color-mix(in srgb, var(--primary-color) 65%, transparent);
		border-color: var(--primary-color);
	}

	.eprice-overlay__submit {
		display: inline-flex;
		align-items: center;
		justify-content: center;
		gap: 0.5rem;
		margin-top: 0.5rem;
	}

	.eprice-overlay__submit-spinner {
		width: 1rem;
		height: 1rem;
		border-radius: 999px;
		border: 2px solid color-mix(in srgb, var(--heading-color) 35%, transparent);
		border-top-color: var(--heading-color);
		opacity: 0;
	}

	.eprice-overlay__form.htmx-request .eprice-overlay__submit-spinner {
		opacity: 1;
		animation: eprice-spin 0.75s linear infinite;
	}

	.eprice-overlay__form.htmx-request .eprice-overlay__submit-label {
		opacity: 0.7;
	}

	.eprice-overlay__disclaimer {
		font-size: 0.75rem;
		color: var(--text-subtle);
		margin: -0.5rem 0 0;
	}

	.eprice-overlay__success-icon {
		width: 3rem;
		height: 3rem;
		border-radius: 999px;
		margin: 0 auto 1rem;
		background: color-mix(in srgb, var(--success-color) 20%, transparent);
		display: grid;
		place-items: center;
		font-size: 1.5rem;
	}

	.eprice-overlay__success-card {
		margin: 1.5rem 0;
		padding: 1rem 1.25rem;
		border-radius: var(--radius-md);
		border: 1px solid var(--border-color);
		background: var(--card-bg-muted);
		text-align: left;
	}

	@keyframes eprice-fade {
		from {
			opacity: 0;
		}
		to {
			opacity: 1;
		}
	}

	@keyframes eprice-slide {
		from {
			transform: translateY(15px);
			opacity: 0;
		}
		to {
			transform: translateY(0);
			opacity: 1;
		}
	}

	@keyframes eprice-spin {
		from {
			transform: rotate(0deg);
		}
		to {
			transform: rotate(360deg);
		}
	}
</style>
