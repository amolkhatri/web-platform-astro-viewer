---
import MazdaLogo from "../assets/Mazda.webp";
import { Image } from "astro:assets";

interface Props {
    address: string;
    phone: string;
    hours: {
        department: string;
        time: string;
    }[];
}

const { address, phone, hours } = Astro.props;

const quickLinks = [
    { label: "New Inventory", href: "/searchnew" },
    { label: "Pre-Owned Inventory", href: "/searchused" },
    { label: "Finance Center", href: "/financing" },
    { label: "Service & Parts", href: "/service" },
    { label: "Schedule Service", href: "/service/schedule" },
    { label: "Contact Us", href: "/contact" }
];
---

<footer class="footer">
    <div class="container">
        <div class="footer-grid">
            <div class="footer-brand">
                <a href="/" class="footer-logo-link">
                    <Image src={MazdaLogo} alt="Passport Mazda" width={160} height={40} loading="lazy" decoding="async" class="footer-logo" />
                </a>
                <p class="footer-address">{address}</p>
                <a href={`tel:${phone}`} class="footer-phone">{phone}</a>
            </div>

            <div>
                <h3 class="column-title">Quick Links</h3>
                <ul class="links-list">
                    {
                        quickLinks.map((link) => (
                            <li>
                                <a class="footer-link" href={link.href}>
                                    {link.label}
                                </a>
                            </li>
                        ))
                    }
                </ul>
            </div>

            <div>
                <h3 class="column-title">Store Hours</h3>
                <div class="hours-list">
                    {
                        hours.map((item) => (
                            <div class="hours-item">
                                <span class="department-name">
                                    {item.department}
                                </span>
                                <span class="department-time">{item.time}</span>
                            </div>
                        ))
                    }
                </div>
            </div>
        </div>

        <div class="copyright">
            &copy; {new Date().getFullYear()} Passport Mazda. All rights
            reserved.
        </div>
    </div>
</footer>

<style>
    @import "./Footer.css";
</style>
