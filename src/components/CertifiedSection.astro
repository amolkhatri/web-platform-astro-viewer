---
interface Props {
    title: string;
    description: string;
    link?: {
        label: string;
        href: string;
    };
    image: string;
    imagePosition?: "left" | "right";
}

const { title, description, link, image, imagePosition = "left" } = Astro.props;
---

<section class="certified-section">
    <div class="certified-container">
        <div
            class={`certified-wrapper ${imagePosition === "right" ? "image-right" : "image-left"}`}
        >
            <div class="certified-image-column">
                <div class="certified-image-container">
                    <img
                        src={image}
                        alt={title}
                        class="certified-image"
                        loading="lazy"
                    />
                    <div class="image-gradient-overlay"></div>
                </div>
            </div>
            <div class="certified-text-column">
                <h2 class="certified-title">{title}</h2>
                <p class="certified-description">
                    {description}
                </p>
                {
                    link && (
                        <a href={link.href} class="certified-link">
                            <span class="link-text">{link.label}</span>
                            <svg
                                xmlns="http://www.w3.org/2000/svg"
                                class="link-arrow"
                                viewBox="0 0 20 20"
                                fill="currentColor"
                            >
                                <path
                                    fill-rule="evenodd"
                                    d="M12.293 5.293a1 1 0 011.414 0l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-2.293-2.293a1 1 0 010-1.414z"
                                    clip-rule="evenodd"
                                />
                            </svg>
                        </a>
                    )
                }
            </div>
        </div>
    </div>
</section>

<style>
    @import "./CertifiedSection.css";
</style>
