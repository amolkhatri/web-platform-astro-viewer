---
interface Vehicle {
    model: string;
    available: number;
    image: string;
  }
  
  interface Props {
    vehicles: Vehicle[];
  }
  await new Promise(resolve => setTimeout(resolve, 10000));
  console.log("I am rendering the vehicle grid");
  const { vehicles } = Astro.props;


  ---

  <div class="grid-container">
      {vehicles.map((vehicle) => (
        <div class="vehicle-card group">
          <div class="card-image-wrapper">
            <!-- Placeholder image logic if real image fails or is placeholder -->
            <div class="placeholder-image">
               <span class="placeholder-icon">ðŸš—</span>
            </div>
             <!-- <img src={vehicle.image} alt={vehicle.model} class="w-full h-full object-cover group-hover:scale-105 transition duration-500" /> -->
             <div class="stock-badge">
                In Stock
             </div>
          </div>
          <div class="card-content">
            <h3 class="vehicle-title">{vehicle.model}</h3>
            <p class="vehicle-availability">
                <span class="availability-dot"></span>
                {vehicle.available} Available
            </p>
            <a href="#" class="view-inventory-btn">
