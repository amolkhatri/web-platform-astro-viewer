---
import { Image } from "astro:assets";

interface Vehicle {
  model: string;
  available: number;
  image: string;
}

interface Props {
  vehicles: Vehicle[];
}
await new Promise((resolve) => setTimeout(resolve, 5000));
console.log("I am rendering the vehicle grid");
const { vehicles } = Astro.props;
---

<div class="grid-container">
  {
    vehicles.map((vehicle) => (
      <div class="vehicle-card group">
        <div class="card-image-wrapper">
          {vehicle.image ? (
            <img
              src={vehicle.image}
              alt={vehicle.model}
              class="vehicle-image"
              loading="lazy"
            />
          ) : (
            <div class="placeholder-image">
              <span class="placeholder-icon">ðŸš—</span>
            </div>
          )}
          <div class="stock-badge">In Stock</div>
        </div>
        <div class="card-content">
          <h3 class="vehicle-title">{vehicle.model}</h3>
          <p class="vehicle-availability">
            <span class="availability-dot" />
            {vehicle.available} Available
          </p>
          <a href="#" class="view-inventory-btn">
            View Inventory
          </a>
        </div>
      </div>
    ))
  }
</div>
<style>
  @import "./VehicleGrid.css";
</style>
