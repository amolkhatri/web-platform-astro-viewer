  <h3>Color Mixer</h3>
  <p>Pure Astro interactivity with vanilla JavaScript â€” no framework overhead!</p>
  
  <div class="color-preview" data-preview>
    <span class="color-hex" data-hex>#ff5d01</span>
  </div>
  
  <div class="color-palette">
    {colors.map((color, i) => (
      <button 
        class={`color-swatch ${i === 0 ? 'active' : ''}`}
        style={`--swatch-color: ${color}`}
        data-color={color}
        aria-label={`Select color ${color}`}
      />
    ))}
  </div>

  <div class="sliders">
    <div class="slider-row">
      <label>Brightness</label>
      <input type="range" min="0" max="200" value="100" data-brightness />
      <span class="slider-value" data-brightness-val>100%</span>
    </div>
    <div class="slider-row">
      <label>Saturation</label>
      <input type="range" min="0" max="200" value="100" data-saturation />
      <span class="slider-value" data-saturation-val>100%</span>
    </div>
  </div>
</div>

<style>
  .color-preview {
    height: 100px;
    background: #ff5d01;
    border-radius: 12px;
    display: flex;
    align-items: center;
    justify-content: center;
    margin-bottom: 1rem;
    transition: all 0.3s ease;
    position: relative;
    overflow: hidden;
  }

  .color-preview::before {
    content: '';
    position: absolute;
    inset: 0;
    background: linear-gradient(135deg, rgba(255,255,255,0.2) 0%, transparent 50%);
  }

  .color-hex {
    font-family: 'JetBrains Mono', 'Fira Code', monospace;
    font-size: 1.25rem;
    font-weight: 700;
    color: #fff;
    text-shadow: 0 2px 4px rgba(0,0,0,0.3);
    position: relative;
    z-index: 1;
  }

  .color-palette {
    display: flex;
    gap: 0.5rem;
    justify-content: center;
    flex-wrap: wrap;
    margin-bottom: 1.25rem;
  }

  .color-swatch {
    width: 36px;
    height: 36px;
    border-radius: 50%;
    border: 3px solid transparent;
    background: var(--swatch-color);
    cursor: pointer;
    transition: all 0.2s ease;
    position: relative;
  }

  .color-swatch:hover {
    transform: scale(1.15);
  }

  .color-swatch.active {
    border-color: #fff;
    box-shadow: 0 0 0 2px var(--swatch-color), 0 4px 12px rgba(0,0,0,0.3);
  }

  .sliders {
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
    background: rgba(255,255,255,0.05);
    padding: 1rem;
    border-radius: 12px;
  }

  .slider-row {
    display: flex;
    align-items: center;
    gap: 0.75rem;
  }

  .slider-row label {
    font-size: 0.8rem;
    color: #a1a1aa;
    min-width: 75px;
  }

  .slider-row input[type="range"] {
    flex: 1;
    height: 6px;
    -webkit-appearance: none;
    appearance: none;
    background: #27272a;
    border-radius: 3px;
    cursor: pointer;
  }

  .slider-row input[type="range"]::-webkit-slider-thumb {
    -webkit-appearance: none;
    width: 18px;
    height: 18px;
    border-radius: 50%;
    background: #ff5d01;
    cursor: pointer;
    transition: transform 0.2s ease;
  }

  .slider-row input[type="range"]::-webkit-slider-thumb:hover {
    transform: scale(1.2);
  }

  .slider-value {
    font-size: 0.8rem;
    color: #71717a;
    min-width: 45px;
    text-align: right;
    font-family: 'JetBrains Mono', monospace;
  }
</style>

<script>
  const picker = document.querySelector('[data-color-picker]');
  if (picker) {
    const preview = picker.querySelector('[data-preview]') as HTMLElement;
    const hexDisplay = picker.querySelector('[data-hex]');
    const swatches = picker.querySelectorAll('.color-swatch');
    const brightnessSlider = picker.querySelector('[data-brightness]') as HTMLInputElement;
    const saturationSlider = picker.querySelector('[data-saturation]') as HTMLInputElement;
    const brightnessVal = picker.querySelector('[data-brightness-val]');
    const saturationVal = picker.querySelector('[data-saturation-val]');

    let currentColor = '#ff5d01';

    function hexToHSL(hex: string) {
      let r = parseInt(hex.slice(1, 3), 16) / 255;
      let g = parseInt(hex.slice(3, 5), 16) / 255;
      let b = parseInt(hex.slice(5, 7), 16) / 255;

      let max = Math.max(r, g, b), min = Math.min(r, g, b);
      let h = 0, s = 0, l = (max + min) / 2;

      if (max !== min) {
        let d = max - min;
        s = l > 0.5 ? d / (2 - max - min) : d / (max + min);
        switch (max) {
          case r: h = ((g - b) / d + (g < b ? 6 : 0)) / 6; break;
          case g: h = ((b - r) / d + 2) / 6; break;
          case b: h = ((r - g) / d + 4) / 6; break;
        }
      }
      return { h: h * 360, s: s * 100, l: l * 100 };
    }

    function hslToHex(h: number, s: number, l: number) {
      s /= 100;
      l /= 100;
      const a = s * Math.min(l, 1 - l);
      const f = (n: number) => {
        const k = (n + h / 30) % 12;
        const color = l - a * Math.max(Math.min(k - 3, 9 - k, 1), -1);
        return Math.round(255 * color).toString(16).padStart(2, '0');
      };
      return `#${f(0)}${f(8)}${f(4)}`;
    }

    function updatePreview() {
      const brightness = parseInt(brightnessSlider?.value || '100');
      const saturation = parseInt(saturationSlider?.value || '100');
      
      const hsl = hexToHSL(currentColor);
      const adjustedL = Math.min(100, Math.max(0, hsl.l * (brightness / 100)));
      const adjustedS = Math.min(100, Math.max(0, hsl.s * (saturation / 100)));
      
      const finalColor = hslToHex(hsl.h, adjustedS, adjustedL);
      
      if (preview) preview.style.background = finalColor;
      if (hexDisplay) hexDisplay.textContent = finalColor.toUpperCase();
      if (brightnessVal) brightnessVal.textContent = `${brightness}%`;
      if (saturationVal) saturationVal.textContent = `${saturation}%`;
    }

    swatches.forEach(swatch => {
      swatch.addEventListener('click', () => {
        swatches.forEach(s => s.classList.remove('active'));
        swatch.classList.add('active');
        currentColor = (swatch as HTMLElement).dataset.color || '#ff5d01';
        updatePreview();
      });
    });

    brightnessSlider?.addEventListener('input', updatePreview);
    saturationSlider?.addEventListener('input', updatePreview);
    
    updatePreview();
  }
</script>

