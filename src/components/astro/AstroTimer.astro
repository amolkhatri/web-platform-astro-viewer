---
// Server-rendered initial time
const serverTime = new Date().toLocaleTimeString();
---

<div class="demo-card astro-card" data-astro-timer>
  <div class="card-badge">Astro</div>
  <div class="card-icon">⏱️</div>
  <h3>Live Timer</h3>
  <p>Client-side JavaScript hydrated on an Astro component using script tags.</p>
  
  <div class="timer-display">
    <div class="time-block">
      <span class="time-value" data-hours>00</span>
      <span class="time-label">Hours</span>
    </div>
    <span class="time-separator">:</span>
    <div class="time-block">
      <span class="time-value" data-minutes>00</span>
      <span class="time-label">Minutes</span>
    </div>
    <span class="time-separator">:</span>
    <div class="time-block">
      <span class="time-value" data-seconds>00</span>
      <span class="time-label">Seconds</span>
    </div>
  </div>
  
  <div class="timer-info">
    <span class="server-badge">Server rendered: {serverTime}</span>
  </div>
</div>

<style>
  .timer-display {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0.5rem;
    background: linear-gradient(135deg, rgba(255, 93, 1, 0.15), rgba(255, 93, 1, 0.05));
    border: 1px solid rgba(255, 93, 1, 0.3);
    padding: 1.5rem;
    border-radius: 16px;
    margin-bottom: 1rem;
  }

  .time-block {
    display: flex;
    flex-direction: column;
    align-items: center;
    min-width: 60px;
  }

  .time-value {
    font-size: 2.5rem;
    font-weight: 800;
    font-family: 'JetBrains Mono', 'Fira Code', monospace;
    background: linear-gradient(135deg, #ff5d01, #ff8534);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    line-height: 1;
  }

  .time-label {
    font-size: 0.7rem;
    color: #71717a;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    margin-top: 0.25rem;
  }

  .time-separator {
    font-size: 2rem;
    font-weight: 800;
    color: #ff5d01;
    opacity: 0.6;
    animation: blink 1s infinite;
  }

  @keyframes blink {
    0%, 50% { opacity: 0.6; }
    51%, 100% { opacity: 0.2; }
  }

  .timer-info {
    text-align: center;
  }

  .server-badge {
    display: inline-block;
    padding: 0.35rem 0.75rem;
    background: rgba(255, 255, 255, 0.05);
    border-radius: 20px;
    font-size: 0.75rem;
    color: #71717a;
  }
</style>

<script>
  const timer = document.querySelector('[data-astro-timer]');
  if (timer) {
    const hours = timer.querySelector('[data-hours]');
    const minutes = timer.querySelector('[data-minutes]');
    const seconds = timer.querySelector('[data-seconds]');

    function updateTime() {
      const now = new Date();
      if (hours) hours.textContent = String(now.getHours()).padStart(2, '0');
      if (minutes) minutes.textContent = String(now.getMinutes()).padStart(2, '0');
      if (seconds) seconds.textContent = String(now.getSeconds()).padStart(2, '0');
    }

    updateTime();
    setInterval(updateTime, 1000);
  }
</script>

