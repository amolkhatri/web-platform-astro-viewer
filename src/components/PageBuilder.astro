---
import HeroSection from "./HeroSection.astro";
import FeaturesGrid from "./FeaturesGrid.astro";
import NewsletterSignup from "./NewsletterSignup.astro";
import FallbackBlock from "./FallbackBlock.astro";
import Header from "./Header.astro";
import Hero from "./Hero.astro";
import VehicleGrid from "./VehicleGrid.astro";
import ContentSection from "./ContentSection.astro";
import CertifiedSection from "./CertifiedSection.astro";
import HoursOfOperation from "./HoursOfOperation.astro";
import Footer from "./Footer.astro";
import DynamicRenderer from "./DynamicRenderer.astro";
import { isBot } from "../utils/isBot";

// Define the type for a block
interface Block {
  type: string;
  data: Record<string, any>;
  serverIsland?: boolean;
}

// Type the blocks prop
interface Props {
  blocks?: Block[];
}

const { blocks = [] } = Astro.props as Props;

// Detect if the request is from a bot
const userAgent = Astro.request.headers.get("user-agent") || "";
const isBotRequest = isBot(userAgent);
---

<div class="dynamic-page-container">
  {
    blocks.map((block) => {
      switch (block.type) {
        case "HeroSection":
          return block.serverIsland && !isBotRequest ? (
            <HeroSection {...block.data} server:defer>
              <div slot="fallback" class="skeleton skeleton-hero">
                <div class="skeleton-content">
                  <div class="skeleton-title" />
                  <div class="skeleton-subtitle" />
                  <div class="skeleton-button" />
                </div>
              </div>
            </HeroSection>
          ) : (
            <HeroSection {...block.data} />
          );
        case "FeaturesGrid":
          return block.serverIsland && !isBotRequest ? (
            <FeaturesGrid {...block.data} server:defer>
              <div slot="fallback" class="skeleton skeleton-features">
                <div class="skeleton-grid">
                  {[...Array(6)].map(() => (
                    <div class="skeleton-card">
                      <div class="skeleton-icon" />
                      <div class="skeleton-text" />
                      <div class="skeleton-text short" />
                    </div>
                  ))}
                </div>
              </div>
            </FeaturesGrid>
          ) : (
            <FeaturesGrid {...block.data} />
          );
        case "NewsletterSignup":
          return block.serverIsland && !isBotRequest ? (
            <NewsletterSignup {...block.data} server:defer>
              <div slot="fallback" class="skeleton skeleton-newsletter">
                <div class="skeleton-title" />
                <div class="skeleton-input" />
              </div>
            </NewsletterSignup>
          ) : (
            <NewsletterSignup {...block.data} />
          );
        case "Header":
          return block.serverIsland && !isBotRequest ? (
            <Header {...(block.data as any)} server:defer>
              <div slot="fallback" class="skeleton skeleton-header">
                <div class="skeleton-logo" />
                <div class="skeleton-nav">
                  {[...Array(5)].map(() => (
                    <div class="skeleton-nav-item" />
                  ))}
                </div>
              </div>
            </Header>
          ) : (
            <Header {...(block.data as any)} />
          );
        case "Hero":
          return block.serverIsland && !isBotRequest ? (
            <Hero {...(block.data as any)} server:defer>
              <div slot="fallback" class="skeleton skeleton-hero">
                <div class="skeleton-content">
                  <div class="skeleton-title" />
                  <div class="skeleton-subtitle" />
                  <div class="skeleton-button" />
                </div>
              </div>
            </Hero>
          ) : (
            <Hero {...(block.data as any)} />
          );
        case "VehicleGrid":
          return block.serverIsland && !isBotRequest ? (
            <VehicleGrid {...(block.data as any)} server:defer>
              <div slot="fallback" class="skeleton skeleton-vehicle-grid">
                <div class="skeleton-section-header">
                  <div class="skeleton-section-title" />
                  <div class="skeleton-section-description" />
                </div>
                <div class="skeleton-vehicle-grid-container">
                  {[...Array(4)].map(() => (
                    <div class="skeleton-vehicle-card">
                      <div class="skeleton-card-image-wrapper">
                        <div class="skeleton-vehicle-image" />
                        <div class="skeleton-stock-badge" />
                      </div>
                      <div class="skeleton-card-content">
                        <div class="skeleton-vehicle-title" />
                        <div class="skeleton-vehicle-availability" />
                        <div class="skeleton-view-button" />
                      </div>
                    </div>
                  ))}
                </div>
              </div>
            </VehicleGrid>
          ) : (
            <VehicleGrid {...(block.data as any)} />
          );
        case "ContentSection":
          return block.serverIsland && !isBotRequest ? (
            <ContentSection {...(block.data as any)} server:defer>
              <div slot="fallback" class="skeleton skeleton-content-section">
                <div class="skeleton-title" />
                <div class="skeleton-text" />
                <div class="skeleton-text" />
                <div class="skeleton-text short" />
              </div>
            </ContentSection>
          ) : (
            <ContentSection {...(block.data as any)} />
          );
        case "CertifiedSection":
          return block.serverIsland && !isBotRequest ? (
            <CertifiedSection {...(block.data as any)} server:defer>
              <div slot="fallback" class="skeleton skeleton-certified-section">
                <div class="skeleton-certified-grid">
                  <div class="skeleton-certified-image" />
                  <div class="skeleton-certified-text">
                    <div class="skeleton-title" />
                    <div class="skeleton-text" />
                    <div class="skeleton-text" />
                    <div class="skeleton-text short" />
                  </div>
                </div>
              </div>
            </CertifiedSection>
          ) : (
            <CertifiedSection {...(block.data as any)} />
          );
        case "HoursOfOperation":
          return block.serverIsland && !isBotRequest ? (
            <HoursOfOperation {...(block.data as any)} server:defer>
              <div slot="fallback" class="skeleton skeleton-hours">
                <div class="skeleton-title" />
                <div class="skeleton-hours-grid">
                  <div class="skeleton-hours-column">
                    <div class="skeleton-text" />
                    <div class="skeleton-text" />
                    <div class="skeleton-text" />
                  </div>
                  <div class="skeleton-hours-column">
                    <div class="skeleton-text" />
                    <div class="skeleton-text" />
                    <div class="skeleton-text" />
                  </div>
                </div>
              </div>
            </HoursOfOperation>
          ) : (
            <HoursOfOperation {...(block.data as any)} />
          );
        case "Footer":
          return block.serverIsland && !isBotRequest ? (
            <Footer {...(block.data as any)} server:defer>
              <div slot="fallback" class="skeleton skeleton-footer">
                <div class="skeleton-footer-grid">
                  {[...Array(4)].map(() => (
                    <div class="skeleton-footer-column">
                      <div class="skeleton-text" />
                      <div class="skeleton-text short" />
                      <div class="skeleton-text short" />
                    </div>
                  ))}
                </div>
              </div>
            </Footer>
          ) : (
            <Footer {...(block.data as any)} />
          );
        case "DynamicRenderer":
          return block.serverIsland && !isBotRequest ? (
            <DynamicRenderer {...(block.data as any)} server:defer>
              <div slot="fallback" class="skeleton skeleton-dynamic">
                <div class="skeleton-content">
                  <div class="skeleton-title" />
                  <div class="skeleton-text" />
                  <div class="skeleton-text" />
                </div>
              </div>
            </DynamicRenderer>
          ) : (
            <DynamicRenderer {...(block.data as any)} />
          );
        default:
          return <FallbackBlock {...block.data} type={block.type} />;
      }
    })
  }
</div>

<style>
  .skeleton {
    animation: pulse 2s cubic-bezier(0.4, 0, 0.6, 1) infinite;
  }

  @keyframes pulse {
    0%,
    100% {
      opacity: 1;
    }
    50% {
      opacity: 0.7;
    }
  }

  @keyframes shimmer {
    0% {
      background-position: -200% 0;
    }
    100% {
      background-position: 200% 0;
    }
  }

  .skeleton > div {
    animation: shimmer 2s infinite;
  }

  /* Hero Skeleton */
  .skeleton-hero {
    min-height: 400px;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 2rem;
    background: transparent;
  }

  .skeleton-content {
    max-width: 600px;
    width: 100%;
  }

  .skeleton-title {
    height: 48px;
    background: rgba(0, 0, 0, 0.08);
    border-radius: 8px;
    margin-bottom: 1rem;
    animation: shimmer 2s infinite;
    background: linear-gradient(
      90deg,
      rgba(0, 0, 0, 0.06) 25%,
      rgba(0, 0, 0, 0.1) 50%,
      rgba(0, 0, 0, 0.06) 75%
    );
    background-size: 200% 100%;
  }

  .skeleton-subtitle {
    height: 24px;
    background: rgba(0, 0, 0, 0.08);
    border-radius: 6px;
    margin-bottom: 2rem;
    width: 80%;
    animation: shimmer 2s infinite;
    background: linear-gradient(
      90deg,
      rgba(0, 0, 0, 0.06) 25%,
      rgba(0, 0, 0, 0.1) 50%,
      rgba(0, 0, 0, 0.06) 75%
    );
    background-size: 200% 100%;
  }

  .skeleton-button {
    height: 48px;
    width: 150px;
    background: rgba(0, 0, 0, 0.08);
    border-radius: 6px;
    animation: shimmer 2s infinite;
    background: linear-gradient(
      90deg,
      rgba(0, 0, 0, 0.06) 25%,
      rgba(0, 0, 0, 0.1) 50%,
      rgba(0, 0, 0, 0.06) 75%
    );
    background-size: 200% 100%;
  }

  /* Features Grid Skeleton */
  .skeleton-features {
    padding: 4rem 2rem;
    background: transparent;
  }

  .skeleton-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 2rem;
    max-width: 1200px;
    margin: 0 auto;
  }

  .skeleton-card {
    padding: 2rem;
    background: rgba(0, 0, 0, 0.03);
    border-radius: 8px;
  }

  .skeleton-icon {
    width: 48px;
    height: 48px;
    background: rgba(0, 0, 0, 0.08);
    border-radius: 50%;
    margin-bottom: 1rem;
    animation: shimmer 2s infinite;
    background: linear-gradient(
      90deg,
      rgba(0, 0, 0, 0.06) 25%,
      rgba(0, 0, 0, 0.1) 50%,
      rgba(0, 0, 0, 0.06) 75%
    );
    background-size: 200% 100%;
  }

  .skeleton-text {
    height: 16px;
    background: rgba(0, 0, 0, 0.08);
    border-radius: 4px;
    margin-bottom: 0.5rem;
    animation: shimmer 2s infinite;
    background: linear-gradient(
      90deg,
      rgba(0, 0, 0, 0.06) 25%,
      rgba(0, 0, 0, 0.1) 50%,
      rgba(0, 0, 0, 0.06) 75%
    );
    background-size: 200% 100%;
  }

  .skeleton-text.short {
    width: 60%;
  }

  /* Newsletter Skeleton */
  .skeleton-newsletter {
    padding: 3rem 2rem;
    max-width: 600px;
    margin: 0 auto;
    background: transparent;
  }

  .skeleton-input {
    height: 48px;
    background: rgba(0, 0, 0, 0.08);
    border-radius: 6px;
    margin-top: 1rem;
    animation: shimmer 2s infinite;
    background: linear-gradient(
      90deg,
      rgba(0, 0, 0, 0.06) 25%,
      rgba(0, 0, 0, 0.1) 50%,
      rgba(0, 0, 0, 0.06) 75%
    );
    background-size: 200% 100%;
  }

  /* Header Skeleton */
  .skeleton-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 1rem 2rem;
    background: transparent;
    border-bottom: 1px solid rgba(0, 0, 0, 0.1);
  }

  .skeleton-logo {
    width: 120px;
    height: 40px;
    background: rgba(0, 0, 0, 0.08);
    border-radius: 4px;
    animation: shimmer 2s infinite;
    background: linear-gradient(
      90deg,
      rgba(0, 0, 0, 0.06) 25%,
      rgba(0, 0, 0, 0.1) 50%,
      rgba(0, 0, 0, 0.06) 75%
    );
    background-size: 200% 100%;
  }

  .skeleton-nav {
    display: flex;
    gap: 2rem;
  }

  .skeleton-nav-item {
    width: 80px;
    height: 20px;
    background: rgba(0, 0, 0, 0.08);
    border-radius: 4px;
    animation: shimmer 2s infinite;
    background: linear-gradient(
      90deg,
      rgba(0, 0, 0, 0.06) 25%,
      rgba(0, 0, 0, 0.1) 50%,
      rgba(0, 0, 0, 0.06) 75%
    );
    background-size: 200% 100%;
  }

  /* Vehicle Grid Skeleton */
  .skeleton-vehicle-grid {
    padding: 6rem 2rem;
    background: var(--surface-bg, #000000);
  }

  .skeleton-section-header {
    text-align: center;
    margin-bottom: 4rem;
    max-width: 800px;
    margin-left: auto;
    margin-right: auto;
  }

  .skeleton-section-title {
    height: 48px;
    max-width: 500px;
    margin: 0 auto 1rem;
    background: rgba(255, 255, 255, 0.08);
    border-radius: 8px;
    animation: shimmer 2s infinite;
    background: linear-gradient(
      90deg,
      rgba(255, 255, 255, 0.06) 25%,
      rgba(255, 255, 255, 0.1) 50%,
      rgba(255, 255, 255, 0.06) 75%
    );
    background-size: 200% 100%;
  }

  .skeleton-section-description {
    height: 24px;
    max-width: 600px;
    margin: 0 auto;
    background: rgba(255, 255, 255, 0.06);
    border-radius: 6px;
    animation: shimmer 2s infinite;
    background: linear-gradient(
      90deg,
      rgba(255, 255, 255, 0.04) 25%,
      rgba(255, 255, 255, 0.08) 50%,
      rgba(255, 255, 255, 0.04) 75%
    );
    background-size: 200% 100%;
  }

  .skeleton-vehicle-grid-container {
    display: grid;
    grid-template-columns: repeat(1, minmax(0, 1fr));
    gap: 2rem;
    max-width: 1280px;
    margin: 0 auto;
  }

  @media (min-width: 768px) {
    .skeleton-vehicle-grid-container {
      grid-template-columns: repeat(2, minmax(0, 1fr));
    }
  }

  @media (min-width: 1024px) {
    .skeleton-vehicle-grid-container {
      grid-template-columns: repeat(4, minmax(0, 1fr));
    }
  }

  .skeleton-vehicle-card {
    background: rgba(255, 255, 255, 0.03);
    border-radius: 1rem;
    overflow: hidden;
    border: 1px solid rgba(255, 255, 255, 0.1);
  }

  .skeleton-card-image-wrapper {
    position: relative;
    height: 14rem;
    background: rgba(255, 255, 255, 0.05);
  }

  .skeleton-vehicle-image {
    width: 100%;
    height: 100%;
    background: rgba(255, 255, 255, 0.08);
    animation: shimmer 2s infinite;
    background: linear-gradient(
      90deg,
      rgba(255, 255, 255, 0.06) 25%,
      rgba(255, 255, 255, 0.12) 50%,
      rgba(255, 255, 255, 0.06) 75%
    );
    background-size: 200% 100%;
  }

  .skeleton-stock-badge {
    position: absolute;
    top: 0.75rem;
    right: 0.75rem;
    width: 60px;
    height: 24px;
    background: rgba(34, 197, 94, 0.3);
    border-radius: 9999px;
    animation: shimmer 2s infinite;
    background: linear-gradient(
      90deg,
      rgba(34, 197, 94, 0.2) 25%,
      rgba(34, 197, 94, 0.4) 50%,
      rgba(34, 197, 94, 0.2) 75%
    );
    background-size: 200% 100%;
  }

  .skeleton-card-content {
    padding: 1.5rem;
    text-align: center;
  }

  .skeleton-vehicle-title {
    height: 24px;
    background: rgba(255, 255, 255, 0.08);
    border-radius: 6px;
    margin-bottom: 0.75rem;
    animation: shimmer 2s infinite;
    background: linear-gradient(
      90deg,
      rgba(255, 255, 255, 0.06) 25%,
      rgba(255, 255, 255, 0.1) 50%,
      rgba(255, 255, 255, 0.06) 75%
    );
    background-size: 200% 100%;
  }

  .skeleton-vehicle-availability {
    height: 20px;
    width: 60%;
    margin: 0 auto 1.5rem;
    background: rgba(34, 197, 94, 0.15);
    border-radius: 4px;
    animation: shimmer 2s infinite;
    background: linear-gradient(
      90deg,
      rgba(34, 197, 94, 0.1) 25%,
      rgba(34, 197, 94, 0.2) 50%,
      rgba(34, 197, 94, 0.1) 75%
    );
    background-size: 200% 100%;
  }

  .skeleton-view-button {
    height: 44px;
    background: rgba(59, 130, 246, 0.2);
    border-radius: 0.75rem;
    animation: shimmer 2s infinite;
    background: linear-gradient(
      90deg,
      rgba(59, 130, 246, 0.15) 25%,
      rgba(59, 130, 246, 0.25) 50%,
      rgba(59, 130, 246, 0.15) 75%
    );
    background-size: 200% 100%;
  }

  /* Content Section Skeleton */
  .skeleton-content-section {
    padding: 3rem 2rem;
    max-width: 800px;
    margin: 0 auto;
    background: transparent;
  }

  /* Footer Skeleton */
  .skeleton-footer {
    padding: 3rem 2rem;
    background: transparent;
  }

  .skeleton-footer-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 2rem;
    max-width: 1200px;
    margin: 0 auto;
  }

  .skeleton-footer-column .skeleton-text {
    margin-bottom: 1rem;
  }

  /* Dynamic Renderer Skeleton */
  .skeleton-dynamic {
    padding: 3rem 2rem;
    max-width: 800px;
    margin: 0 auto;
    background: transparent;
  }

  /* Certified Section Skeleton */
  .skeleton-certified-section {
    padding: 5rem 2rem;
    background: #000000;
  }

  .skeleton-certified-grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 3rem;
    max-width: 1280px;
    margin: 0 auto;
  }

  @media (min-width: 768px) {
    .skeleton-certified-grid {
      grid-template-columns: 1fr 1fr;
      gap: 4rem;
    }
  }

  .skeleton-certified-image {
    width: 100%;
    height: 300px;
    background: rgba(255, 255, 255, 0.08);
    border-radius: 12px;
    animation: shimmer 2s infinite;
    background: linear-gradient(
      90deg,
      rgba(255, 255, 255, 0.06) 25%,
      rgba(255, 255, 255, 0.1) 50%,
      rgba(255, 255, 255, 0.06) 75%
    );
    background-size: 200% 100%;
  }

  @media (min-width: 768px) {
    .skeleton-certified-image {
      height: 400px;
    }
  }

  .skeleton-certified-text {
    display: flex;
    flex-direction: column;
    gap: 1rem;
    padding: 2rem 0;
  }

  /* Hours of Operation Skeleton */
  .skeleton-hours {
    padding: 5rem 2rem;
    background: #000000;
  }

  .skeleton-hours-grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 3rem;
    max-width: 800px;
    margin: 2rem auto 0;
  }

  @media (min-width: 640px) {
    .skeleton-hours-grid {
      grid-template-columns: 1fr 1fr;
      gap: 4rem;
    }
  }

  .skeleton-hours-column {
    background: rgba(255, 255, 255, 0.03);
    border-radius: 12px;
    padding: 2rem 1.5rem;
    border: 1px solid rgba(255, 255, 255, 0.1);
  }

  .skeleton-hours-column .skeleton-text {
    margin-bottom: 1rem;
    background: linear-gradient(
      90deg,
      rgba(255, 255, 255, 0.06) 25%,
      rgba(255, 255, 255, 0.1) 50%,
      rgba(255, 255, 255, 0.06) 75%
    );
    background-size: 200% 100%;
  }

  @media (prefers-color-scheme: dark) {
    .skeleton-title,
    .skeleton-subtitle,
    .skeleton-button,
    .skeleton-icon,
    .skeleton-text,
    .skeleton-input,
    .skeleton-logo,
    .skeleton-nav-item,
    .skeleton-image,
    .skeleton-price {
      background: linear-gradient(
        90deg,
        rgba(255, 255, 255, 0.06) 25%,
        rgba(255, 255, 255, 0.1) 50%,
        rgba(255, 255, 255, 0.06) 75%
      );
      background-size: 200% 100%;
    }

    .skeleton-card,
    .skeleton-vehicle-card {
      background: rgba(255, 255, 255, 0.03);
    }

    .skeleton-header {
      border-bottom: 1px solid rgba(255, 255, 255, 0.1);
    }
  }
</style>
