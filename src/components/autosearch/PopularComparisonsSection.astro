---
const comparisons = [
    {
        title: "2024 Tesla Model Y vs. 2024 Ford Mustang Mach-E",
        url: "#",
    },
    {
        title: "2024 Honda Accord vs. 2024 Toyota Camry",
        url: "#",
    },
    {
        title: "2024 Honda CR-V vs. 2024 Toyota RAV4",
        url: "#",
    },
];
---

<section class="section">
    <div class="container">
        <h2 class="section-title">Popular comparisons</h2>
        <div class="comparisons-list">
            {comparisons.map((comparison) => (
                <a href={comparison.url} class="comparison-link">
                    {comparison.title}
                </a>
            ))}
        </div>
    </div>
</section>

<style>
    .section {
        padding: 4rem 1rem;
        background: #fff;
    }
    .container {
        max-width: 1200px;
        margin: 0 auto;
    }
    .section-title {
        font-size: 2rem;
        margin-bottom: 2rem;
        color: #333;
        font-weight: 600;
    }
    .comparisons-list {
        display: flex;
        flex-direction: column;
        gap: 1rem;
    }
    .comparison-link {
        display: block;
        padding: 1rem 1.5rem;
        background: #f5f5f5;
        border-radius: 8px;
        color: #4b2c8e;
        text-decoration: none;
        font-weight: 500;
        transition: all 0.2s;
        border: 1px solid transparent;
    }
    .comparison-link:hover {
        background: #fff;
        border-color: #4b2c8e;
        box-shadow: 0 2px 8px rgba(75, 44, 142, 0.1);
    }

    @media (max-width: 768px) {
        .section-title {
            font-size: 1.5rem;
        }
        .comparison-link {
            padding: 0.875rem 1rem;
            font-size: 0.95rem;
        }
    }
</style>

