<style>
    .advanced-search-widget {
        max-width: 1200px;
        margin: 0 auto;
        padding: 2rem 1rem;
        background: #fff;
    }

    .search-input-container {
        position: relative;
        margin-bottom: 1.5rem;
    }

    .search-input {
        width: 100%;
        padding: 1rem 3.5rem 1rem 1.5rem;
        border: 2px solid #e0e0e0;
        border-radius: 999px;
        font-size: 1rem;
        box-sizing: border-box;
        transition: border-color 0.2s;
        background: #fff;
    }

    .search-input:focus {
        outline: none;
        border-color: #4b2c8e;
    }

    .search-icon-btn {
        position: absolute;
        right: 1.25rem;
        top: 50%;
        transform: translateY(-50%);
        background: none;
        border: none;
        cursor: pointer;
        color: #666;
        padding: 0.25rem;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .search-icon-btn:hover {
        color: #4b2c8e;
    }

    .divider {
        position: relative;
        text-align: center;
        margin: 2rem 0;
    }

    .divider::before {
        content: "";
        position: absolute;
        left: 0;
        right: 0;
        top: 50%;
        height: 1px;
        background: #e0e0e0;
    }

    .divider-text {
        position: relative;
        background: #fff;
        padding: 0 1rem;
        color: #666;
        font-size: 0.875rem;
    }

    .tabs-container {
        display: flex;
        gap: 2rem;
        margin-bottom: 1.5rem;
        border-bottom: 2px solid #e0e0e0;
    }

    .tab {
        background: none;
        border: none;
        padding: 0.75rem 0;
        font-size: 1rem;
        font-weight: 600;
        color: #666;
        cursor: pointer;
        border-bottom: 3px solid transparent;
        margin-bottom: -2px;
        transition: color 0.2s;
    }

    .tab:hover {
        color: #333;
    }

    .tab.active {
        color: #4b2c8e;
        border-bottom-color: #4b2c8e;
    }

    .filters-card {
        border-radius: 8px;
        border: 1px solid #e0e0e0;
        overflow: hidden;
        background: #fff;
    }

    .tab-content {
        display: block;
    }

    .tab-content[style*="display: none"] {
        display: none !important;
    }

    .filters-row {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 0;
        border-top: 1px solid #e0e0e0;
    }

    .filters-row:first-of-type {
        border-top: none;
    }

    .filter-group {
        padding: 0.75rem 1.25rem;
        display: flex;
        flex-direction: column;
        gap: 0.35rem;
        border-left: 1px solid #e0e0e0;
    }

    .filters-row > .filter-group:first-child {
        border-left: none;
    }

    .filter-label {
        font-size: 0.75rem;
        color: #666;
        font-weight: 500;
    }

    .filter-control {
        padding: 0.75rem 1rem;
        border: 1px solid #ccc;
        border-radius: 4px;
        font-size: 0.95rem;
        width: 100%;
        box-sizing: border-box;
        background: #fff;
        cursor: pointer;
    }

    .filter-control:focus {
        outline: none;
        border-color: #4b2c8e;
    }

    .filter-control[type="text"] {
        cursor: text;
    }

    .distance-zip-group {
        border-left: none;
    }

    .distance-zip-grid {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 0;
    }

    .distance-zip-grid .filter-group {
        border-left: 1px solid #e0e0e0;
        padding-left: 1.25rem;
    }

    .distance-zip-grid .filter-group:first-child {
        border-left: none;
        padding-left: 0;
    }

    .search-group {
        display: flex;
        flex-direction: column;
        justify-content: flex-end;
        border-left: 1px solid #e0e0e0;
    }

    .search-button {
        background-color: #4b2c8e;
        color: #fff;
        border: none;
        padding: 0.9rem 2rem;
        border-radius: 4px;
        font-weight: 700;
        font-size: 1rem;
        cursor: pointer;
        transition: background-color 0.2s;
        width: 100%;
    }

    .search-button:hover {
        background-color: #3a2270;
    }

    @media (max-width: 900px) {
        .filters-row {
            grid-template-columns: 1fr;
        }

        .distance-zip-grid {
            grid-template-columns: 1fr;
        }

        .filters-row > .filter-group {
            border-left: none;
        }

        .distance-zip-grid .filter-group {
            border-left: none;
            padding-left: 0;
        }
    }
</style>

<script is:inline>
    // Tab switching functionality
    (function () {
        document.addEventListener("DOMContentLoaded", function () {
            const tabs = document.querySelectorAll(
                ".advanced-search-widget .tab"
            );
            const tabContents = document.querySelectorAll(
                ".advanced-search-widget .tab-content"
            );

            tabs.forEach(function (tab) {
                tab.addEventListener("click", function () {
                    const tabName = tab.getAttribute("data-tab");

                    // Update active tab
                    tabs.forEach(function (t) {
                        t.classList.remove("active");
                    });
                    tab.classList.add("active");

                    // Show/hide corresponding content
                    tabContents.forEach(function (content) {
                        const contentTab = content.getAttribute("data-tab-content");
                        if (contentTab === tabName) {
                            content.style.display = "block";
                        } else {
                            content.style.display = "none";
                        }
                    });
                });
            });
        });
    })();
</script>




