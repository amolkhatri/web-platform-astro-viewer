---
import { Image } from "astro:assets";
import redCar from "../../assets/red-car.avif";
import whiteCar from "../../assets/white-car.avif";
---

<section class="section">
    <div class="container">
        <div class="cards-grid">
            <button class="card-button">
                <h3 class="card-title">Popular Cars</h3>
                <div class="card-image-container">
                    <Image
                        src={redCar}
                        alt="Popular Cars"
                        class="card-image"
                    />
                </div>
            </button>
            <button class="card-button">
                <h3 class="card-title">Discontinued makes</h3>
                <div class="card-image-container">
                    <Image
                        src={whiteCar}
                        alt="Discontinued makes"
                        class="card-image"
                    />
                </div>
            </button>
        </div>
    </div>
</section>

<style>
    .section {
        padding: 4rem 1rem;
        background: #fff;
    }
    .container {
        max-width: 1200px;
        margin: 0 auto;
    }
    .cards-grid {
        display: grid;
        grid-template-columns: repeat(2, 1fr);
        gap: 1.5rem;
    }
    .card-button {
        background: #fff;
        border: 1px solid #e0e0e0;
        border-radius: 8px;
        padding: 1.5rem;
        cursor: pointer;
        transition: all 0.2s;
        text-align: left;
        display: flex;
        flex-direction: column;
        gap: 1rem;
    }
    .card-button:hover {
        border-color: #4b2c8e;
        box-shadow: 0 4px 12px rgba(75, 44, 142, 0.1);
        transform: translateY(-2px);
    }
    .card-title {
        font-size: 1.2rem;
        font-weight: 600;
        color: #333;
        margin: 0;
    }
    .card-image-container {
        width: 100%;
        height: 200px;
        overflow: hidden;
        border-radius: 4px;
    }
    .card-image {
        width: 100%;
        height: 100%;
        object-fit: cover;
    }

    @media (max-width: 600px) {
        .cards-grid {
            grid-template-columns: 1fr;
        }
    }
</style>

