---
import { Image } from "astro:assets";
import redCar from "../../assets/red-car.avif";
import whiteCar from "../../assets/white-car.avif";
import blackCar from "../../assets/black-car.avif";
import yellowCar from "../../assets/yellow-car.jpeg";
import redCar2 from "../../assets/red-car-2.avif";
import mazdaCar from "../../assets/Mazda.webp";

const categories = [
    {
        id: "best-of-winners",
        label: "Best Of award winners",
        cars: [
            { name: "2025 Hyundai SANTA FE", price: "$34,300", image: redCar },
            { name: "2025 Hyundai PALISADE", price: "$37,200", image: whiteCar },
            { name: "2025 RAM 1500", price: "$40,275", image: blackCar },
            { name: "2025 Toyota Land Cruiser", price: "$56,700", image: yellowCar },
            { name: "2025 Genesis Electrified GV70", price: "$66,950", image: redCar2 },
            { name: "2025 Kia EV9", price: "$54,900", image: mazdaCar },
        ],
    },
    {
        id: "best-of-finalists",
        label: "Best Of award finalists",
        cars: [
            { name: "2025 Toyota RAV4", price: "$28,000", image: whiteCar },
            { name: "2025 Honda CR-V", price: "$30,000", image: blackCar },
        ],
    },
    {
        id: "american-made",
        label: "American Made Index qualifiers",
        cars: [
            { name: "2025 Ford F-150", price: "$35,000", image: yellowCar },
        ],
    },
];

const activeCategory = categories[0];
---

<section class="section">
    <div class="container">
        <div class="header">
            <h2 class="section-title">Our recommendations</h2>
        </div>
        <div class="tabs-container">
            <div class="tabs-wrapper">
                <div class="tabs" role="tablist">
                    {categories.map((cat, index) => (
                        <button
                            class={`tab ${index === 0 ? "active" : ""}`}
                            role="tab"
                            data-tab={cat.id}
                        >
                            {cat.label}
                        </button>
                    ))}
                </div>
                {categories.map((cat, index) => (
                    <div
                        class={`tabpanel ${index === 0 ? "active" : ""}`}
                        role="tabpanel"
                        data-panel={cat.id}
                    >
                        <ul class="cars-list">
                            {cat.cars.map((car) => (
                                <li class="car-item">
                                    <div class="car-content">
                                        <div class="car-info">
                                            <p class="car-price">{car.price}</p>
                                            <a href="#" class="car-name">{car.name}</a>
                                        </div>
                                        <button class="compare-btn">
                                            <span>Compare</span>
                                        </button>
                                    </div>
                                </li>
                            ))}
                        </ul>
                    </div>
                ))}
            </div>
        </div>
    </div>
</section>

<script>
    document.addEventListener("DOMContentLoaded", () => {
        const tabs = document.querySelectorAll(".tab");
        const tabpanels = document.querySelectorAll(".tabpanel");

        tabs.forEach((tab) => {
            tab.addEventListener("click", () => {
                const tabId = tab.getAttribute("data-tab");

                tabs.forEach((t) => t.classList.remove("active"));
                tabpanels.forEach((p) => p.classList.remove("active"));

                tab.classList.add("active");
                const panel = document.querySelector(
                    `.tabpanel[data-panel="${tabId}"]`
                );
                if (panel) {
                    panel.classList.add("active");
                }
            });
        });
    });
</script>

<style>
    .section {
        padding: 4rem 1rem;
        background: #fff;
    }
    .container {
        max-width: 1200px;
        margin: 0 auto;
    }
    .header {
        margin-bottom: 2rem;
    }
    .section-title {
        font-size: 2rem;
        margin: 0;
        color: #333;
        font-weight: 600;
    }
    .tabs-container {
        width: 100%;
    }
    .tabs-wrapper {
        position: relative;
    }
    .tabs {
        display: flex;
        gap: 0.5rem;
        overflow-x: auto;
        padding-bottom: 1rem;
        margin-bottom: 2rem;
        border-bottom: 2px solid #e0e0e0;
        scrollbar-width: thin;
    }
    .tabs::-webkit-scrollbar {
        height: 4px;
    }
    .tabs::-webkit-scrollbar-thumb {
        background: #ccc;
        border-radius: 2px;
    }
    .tab {
        background: none;
        border: none;
        padding: 0.75rem 1.5rem;
        font-size: 1rem;
        font-weight: 500;
        color: #666;
        cursor: pointer;
        white-space: nowrap;
        border-bottom: 2px solid transparent;
        margin-bottom: -2px;
        transition: all 0.2s;
    }
    .tab:hover {
        color: #333;
    }
    .tab.active {
        color: #4b2c8e;
        border-bottom-color: #4b2c8e;
        font-weight: 600;
    }
    .tabpanel {
        display: none;
    }
    .tabpanel.active {
        display: block;
    }
    .cars-list {
        list-style: none;
        padding: 0;
        margin: 0;
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
        gap: 1.5rem;
    }
    .car-item {
        border: 1px solid #e0e0e0;
        border-radius: 8px;
        padding: 1.5rem;
        transition: box-shadow 0.2s;
    }
    .car-item:hover {
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
    }
    .car-content {
        display: flex;
        justify-content: space-between;
        align-items: flex-start;
        gap: 1rem;
    }
    .car-info {
        flex: 1;
    }
    .car-price {
        font-size: 1.1rem;
        font-weight: 700;
        color: #333;
        margin: 0 0 0.5rem 0;
    }
    .car-name {
        font-size: 1rem;
        color: #4b2c8e;
        text-decoration: none;
        font-weight: 500;
        display: block;
    }
    .car-name:hover {
        text-decoration: underline;
    }
    .compare-btn {
        background: none;
        border: none;
        color: #4b2c8e;
        font-size: 0.9rem;
        font-weight: 600;
        cursor: pointer;
        padding: 0.5rem;
        white-space: nowrap;
        display: flex;
        align-items: center;
        gap: 0.5rem;
    }
    .compare-btn:hover {
        text-decoration: underline;
    }

    @media (max-width: 768px) {
        .section-title {
            font-size: 1.5rem;
        }
        .cars-list {
            grid-template-columns: 1fr;
        }
        .car-content {
            flex-direction: column;
        }
    }
</style>

