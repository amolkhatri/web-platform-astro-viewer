<section class="section">
    <div class="container">
        <div class="ev-content">
            <div class="ev-text">
                <h2 class="section-title">All New EVs</h2>
                <p class="ev-description">
                    Discover the latest electric vehicles. Learn about range,
                    charging, and incentives. Find the perfect EV for your
                    lifestyle.
                </p>
                <a href="#" class="ev-btn">Shop Electric Cars</a>
            </div>
            <div class="ev-image-container">
                <img
                    src="https://images.unsplash.com/photo-1593941707882-a5bba14938c7?auto=format&fit=crop&w=800&q=80"
                    alt="Electric Car Charging"
                    class="ev-image"
                />
            </div>
        </div>
    </div>
</section>

<style>
    .section {
        padding: 4rem 1rem;
        background: #1a1a1a;
        color: #fff;
    }
    .container {
        max-width: 1200px;
        margin: 0 auto;
    }
    .ev-content {
        display: flex;
        flex-direction: column;
        gap: 2rem;
        align-items: center;
    }
    @media (min-width: 768px) {
        .ev-content {
            flex-direction: row;
            justify-content: space-between;
        }
    }
    .ev-text {
        flex: 1;
    }
    .section-title {
        font-size: 2.5rem;
        margin-bottom: 1rem;
        color: #fff;
    }
    .ev-description {
        font-size: 1.2rem;
        margin-bottom: 2rem;
        line-height: 1.6;
        color: #ccc;
    }
    .ev-btn {
        display: inline-block;
        padding: 1rem 2rem;
        background: #fff;
        color: #1a1a1a;
        text-decoration: none;
        font-weight: 700;
        border-radius: 4px;
    }
    .ev-btn:hover {
        background: #e0e0e0;
    }
    .ev-image-container {
        flex: 1;
    }
    .ev-image {
        width: 100%;
        border-radius: 8px;
    }
</style>
