---

<section class="section">
    <div class="container">
        <h2 class="section-title">Popular Categories</h2>
        <div class="categories-grid">
            {
                categories.map((cat) => (
                    <a href="#" class="category-card">
                        <span class="category-icon">{cat.icon}</span>
                        <span class="category-name">{cat.name}</span>
                    </a>
                ))
            }
        </div>
    </div>
</section>

<style>
    .section {
        padding: 4rem 1rem;
        background: #fff;
    }
    .container {
        max-width: 1200px;
        margin: 0 auto;
    }
    .section-title {
        font-size: 2rem;
        margin-bottom: 2rem;
        color: #333;
    }
    .categories-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(150px, 1fr));
        gap: 1.5rem;
    }
    .category-card {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        padding: 2rem;
        background: #f5f5f5;
        border-radius: 8px;
        text-decoration: none;
        color: #333;
        transition: background 0.2s;
    }
    .category-card:hover {
        background: #e0e0e0;
    }
    .category-icon {
        font-size: 2.5rem;
        margin-bottom: 1rem;
    }
    .category-name {
        font-weight: 600;
        font-size: 1.1rem;
    }
</style>
