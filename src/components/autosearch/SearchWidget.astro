<div class="search-widget">
    <div class="search-form">
        <div class="form-row">
            <div class="form-group">
                <label for="distance" class="form-label">Distance</label>
                <select id="distance" class="form-select">
                    <option>50 miles</option>
                    <option>25 miles</option>
                    <option>100 miles</option>
                    <option>200 miles</option>
                </select>
            </div>
            <div class="form-group">
                <label for="zip" class="form-label">ZIP</label>
                <input
                    id="zip"
                    type="text"
                    class="form-input"
                    placeholder="Enter ZIP"
                />
            </div>
            <button class="search-btn">Search</button>
        </div>
        <a href="#" class="advanced-search-link">Advanced search</a>
    </div>
</div>

<style>
    .search-widget {
        background: #f5f5f5;
        border-radius: 8px;
        padding: 1.5rem;
        max-width: 1200px;
        margin: 0 auto;
    }

    .search-form {
        display: flex;
        flex-direction: column;
        gap: 1rem;
    }

    .form-row {
        display: flex;
        gap: 1rem;
        align-items: flex-end;
    }

    .form-group {
        display: flex;
        flex-direction: column;
        gap: 0.5rem;
        flex: 0 0 auto;
    }

    .form-label {
        font-size: 0.875rem;
        color: #333;
        font-weight: 500;
    }

    .form-select,
    .form-input {
        padding: 0.75rem 1rem;
        border: 1px solid #ccc;
        border-radius: 4px;
        font-size: 1rem;
        min-width: 150px;
        box-sizing: border-box;
        background: #fff;
    }

    .form-input {
        min-width: 200px;
    }

    .search-btn {
        background-color: #4b2c8e;
        color: #fff;
        border: none;
        padding: 0.75rem 2rem;
        border-radius: 4px;
        font-weight: 700;
        font-size: 1rem;
        cursor: pointer;
        white-space: nowrap;
        height: fit-content;
    }

    .search-btn:hover {
        background-color: #3a2270;
    }

    .advanced-search-link {
        color: #666;
        text-decoration: none;
        font-size: 0.875rem;
        align-self: flex-start;
    }

    .advanced-search-link:hover {
        text-decoration: underline;
    }

    @media (max-width: 768px) {
        .form-row {
            flex-wrap: wrap;
        }
        .form-group {
            flex: 1 1 100%;
        }
        .search-btn {
            width: 100%;
        }
    }
</style>
