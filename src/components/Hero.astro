---
import defaultHeroImage from "../assets/Passport_Mazda_Web__1920x540_HomepagePhotoV1_09-25.jpg";

interface Props {
    title: string;
    image?: string;
    search: {
        placeholder: string;
    };
}

const { title, image, search } = Astro.props;
const backgroundImage = image || defaultHeroImage.src;
---

<section class="hero-section">
    <div class="hero-bg">
        <img
            src={backgroundImage}
            alt="Hero Background"
            class="hero-image"
            loading="eager"
        />
        <div class="hero-overlay"></div>
    </div>

    <div class="hero-content">
        <h1 class="hero-title">
            {title}
        </h1>

        <div class="search-widget">
            <div class="search-form">
                <input
                    type="text"
                    placeholder={search.placeholder}
                    class="search-input"
                />
                <button class="search-button"> Search </button>
            </div>
            <div class="search-links">
                <a href="#" class="search-link">
                    <span class="search-link-dot"></span> Search New
                </a>
                <a href="#" class="search-link">
                    <span class="search-link-dot"></span> Search Used
                </a>
                <a href="#" class="search-link">
                    <span class="search-link-dot"></span> Certified Pre-Owned
                </a>
            </div>
        </div>
    </div>
</section>

<style>
    @import "./Hero.css";
</style>
