---
import Layout from "../layouts/multipleSlot.astro";
---
<Layout title="Vehicle Multi-slot Demo">
  <div slot="header">
    <h1>Header</h1>
  </div>

  <div slot="block1">
    <p>Block 1 – Vehicle highlights or key info.</p>
  </div>

  <div slot="vehiclePhoto">
    <p>Vehicle Photo goes here</p>
  </div>

  <div slot="block2">
    <p>Block 2 – Pricing / key CTA.</p>
  </div>

  <div slot="block3">
    <p>Block 3 – Features or specs.</p>
  </div>

  <div slot="block4">
    <p>Block 4 – Warranty, finance, or trust content.</p>
  </div>

  <div slot="block5">
    <p>Block 5 – Left half (e.g., trade-in, payment calc).</p>
  </div>

  <div slot="block6">
    <p>Block 6 – Right half (e.g., contact form, CTA).</p>
  </div>

  <div slot="block7">
    <p>Block 7 – Additional content.</p>
  </div>

  <div slot="block8">
    <p>Block 8 – Additional content.</p>
  </div>

  <div slot="footer">
    <h2>Footer</h2>
  </div>
</Layout>