---
import Layout from "../layouts/Layout.astro";
import DynamicRenderer from "../components/DynamicRenderer.astro";

const testHtml =
    '<h1 id="test-heading">Hello Dynamic World</h1><button id="test-btn">Click Me</button>';
const testCss =
    "#test-heading { color: red; } #test-btn { padding: 10px; background: blue; color: white; }";
const testJs =
    'document.getElementById("test-btn").addEventListener("click", () => alert("Clicked!")); console.log("Dynamic JS loaded");';
---

<Layout title="Test Dynamic Renderer">
    <main>
        <h2>Testing Dynamic Renderer</h2>
        <DynamicRenderer html={testHtml} css={testCss} js={testJs} />
    </main>
</Layout>
